static uint16_t max_sdu = 65533; // 23 to 65533
static uint16_t max_pdu = 252; // 23 to 252, TODO: optimize for MTU
static uint16_t credit = 65535; // 1 to 65535
static uint16_t spsm = 0x23; // IPSP
static uint16_t cid = 41; // 0x40-0x7F, device/channel endpoint identifier, TODO: pointer

// The advertising set handle allocated from Bluetooth stack.
static uint8_t advertising_set_handle = 0xff;
// TODO: create connection handle, pass it along
static uint8_t connection_handle = 0;

